<h1>Listing WODs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th>Exercies</th>
  </tr>

<% @templates.each do |template| %>
  <tr>
    <td><%= template.name %></td>
    <td><%= template.description %></td>
    <td></td><td></td>
    <td><% template.exercises.each do |exer| %>
      <%= exer.name %>    
    <% end %>
    </td>
    <td><%= link_to 'Details', template_path(template) %></td>
    <% if template.user_id == current_user.id %>
      <td><%= link_to 'Edit', edit_template_path(template) %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New WOD', new_template_path %>
